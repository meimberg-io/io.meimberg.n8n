# n8n Environment Configuration
# Copy this file to .env and adjust the values for your setup

# ==============================================================================
# Local Development Configuration
# ==============================================================================

# Webhook URL - Use localhost for local development
WEBHOOK_URL=http://localhost:5678

# Port to expose n8n on the host machine
N8N_PORT=5678

# Timezone
GENERIC_TIMEZONE=Europe/Berlin
TZ=Europe/Berlin

# Log level (error, warn, info, debug)
N8N_LOG_LEVEL=info

# ==============================================================================
# Authentication (Optional)
# ==============================================================================

# Basic authentication
# N8N_BASIC_AUTH_ACTIVE=false
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=password

# ==============================================================================
# Security (Optional but Recommended)
# ==============================================================================

# Encryption key for credentials (generate with: openssl rand -hex 32)
# Keep this secret and consistent across environments!
# N8N_ENCRYPTION_KEY=

# ==============================================================================
# Database Configuration (Optional - default uses SQLite)
# ==============================================================================

# Use PostgreSQL instead of SQLite
# DB_TYPE=postgresdb
# DB_POSTGRESDB_HOST=localhost
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=n8n
# DB_POSTGRESDB_PASSWORD=password

# ==============================================================================
# Advanced Configuration (Optional)
# ==============================================================================

# Enable/disable version notifications
# N8N_VERSION_NOTIFICATIONS_ENABLED=false

# Execution settings
# EXECUTIONS_PROCESS=main
# EXECUTIONS_TIMEOUT=300
# EXECUTIONS_TIMEOUT_MAX=3600

# Payload size limit (MB)
# N8N_PAYLOAD_SIZE_MAX=16

# ==============================================================================
# Production Sync Configuration (for sync-from-prod script)
# ==============================================================================

# SSH configuration to sync data from production server
# PROD_SSH_HOST=hc-02.meimberg.io
# PROD_SSH_USER=deploy
# PROD_SSH_KEY=~/.ssh/id_rsa
# PROD_SSH_PORT=22
# PROD_APP_DIR=/srv/projects/n8n  # Default for new Ansible structure

