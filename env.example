# n8n Local Development Environment Configuration
# Copy this file to .env and adjust the values for your local setup

# Webhook URL - Use localhost for local development
WEBHOOK_URL=http://localhost:5678

# Port to expose n8n on the host machine
N8N_PORT=5678

# Optional: Custom n8n configuration
# N8N_BASIC_AUTH_ACTIVE=true
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=password

# Optional: Database configuration (default uses SQLite)
# DB_TYPE=postgresdb
# DB_POSTGRESDB_HOST=localhost
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=n8n
# DB_POSTGRESDB_PASSWORD=password

# Optional: Timezone
# GENERIC_TIMEZONE=Europe/Berlin
# TZ=Europe/Berlin

# Optional: Encryption key (generate with: openssl rand -hex 32)
# N8N_ENCRYPTION_KEY=

# Optional: Log level
# N8N_LOG_LEVEL=info

# Optional: Enable/disable version notifications
# N8N_VERSION_NOTIFICATIONS_ENABLED=false

